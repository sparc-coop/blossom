<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<OutputType>Library</OutputType>
		<IsPackable>true</IsPackable>
		<Version>9.0.0-rc.2</Version>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		
		<Authors>Sparc Cooperative</Authors>
		<Company>Sparc Cooperative</Company>
		<Description>Blossom Plugin for Twilio</Description>
		<PackageIcon>icon.png</PackageIcon>
		<PackageReadmeFile>readme.md</PackageReadmeFile>
		<PackageTags>Notifications;Twilio;Sparc;Blossom</PackageTags>
		<PackageProjectUrl>https://github.com/sparc-coop/blossom</PackageProjectUrl>
		<RepositoryUrl>https://github.com/sparc-coop/blossom</RepositoryUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
	</PropertyGroup>
	
	<ItemGroup>
	  <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="9.0.0-rc.2.24473.5" />
	  <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.0-rc.2.24473.5" />
	  <PackageReference Include="SendGrid" Version="9.29.3" />
	  <PackageReference Include="SendGrid.Extensions.DependencyInjection" Version="1.0.1" />
	  <PackageReference Include="Twilio" Version="7.5.0" />
	</ItemGroup>
	
	<ItemGroup>
	  <None Update="icon.png" Pack="true" PackagePath="\" />
	  <None Update="readme.md" Pack="true" PackagePath="\" />
	</ItemGroup>
</Project>